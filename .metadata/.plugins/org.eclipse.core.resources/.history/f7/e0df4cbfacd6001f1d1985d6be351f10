package OOP;

import java.util.Scanner;

public class Main07 {
	public static void main(String[] args) {
		
		Scanner keyboard = new Scanner(System.in);
		CuentaCorriente aa = new CuentaCorriente();
		
		
		int dni, balance, sel;
		String name;
		
		do {
			System.out.println("what do u want to get?: ");
			System.out.println("deal 1 for introduce a new costumer: "
					+ "\ndeal 2 to get some cash out: "
					+ "\ndeal 3 for make a deposit"
					+ "\ndeal 4 for exit");
			sel=keyboard.nextInt();
		}while(sel!=4);
		
		switch(sel) {
		case 1:
			
			System.out.print("gave me the name:");
			name = keyboard.next();
			System.out.print("gave me the dni:");
			dni = keyboard.nextInt();
			CuentaCorriente aa = new CuentaCorriente(name,dni);

			//CuentaCorriente aa = new CuentaCorriente());
			break;
			
		case 2:
			System.out.print("you have this balance: "+ aa.balance +", how much do you want to take?:");
			break;
		case 3:
			break;
		case 4:
			break;
		}
		
		
		//CuentaCorriente [] students  = new CuentaCorriente [4];
		
		
		
		//aa.printToString();
		
	}
}
