package OOP;

import java.util.Scanner;

public class CuentaCorriente {
	String name;
	int dni, balance;
	
	public CuentaCorriente() {

	}

	
	public CuentaCorriente( String name, int dni) {
		this.name=name;
		this.dni=dni;
		this.balance=0;
	}
	
	public CuentaCorriente( int balance) {
		this.balance= balance;
	}
	
	public CuentaCorriente( String name, int dni, int balance) {
		this.name=name;

	}
	
	public String insertCostumerName (Scanner keyboard) {
		System.out.print("gave me the name:");
		this.name = keyboard.next();
		
        return new CuentaCorriente(name, dni);
	}
	
	public CuentaCorriente insertCostumerDni (Scanner keyboard) {
		System.out.print("gave me the name:");
		this.name = keyboard.next();
		System.out.print("gave me the dni:");
		this.dni = keyboard.nextInt();	
		
        return new CuentaCorriente(name, dni);
	}
	
	
	//GETTERS AND SETTERS
	
	public String getNombre() {
		return name;
	}
	public void setNombre(String nombre) {
		this.name = nombre;
	}

	
	public int getDni() {
		return dni;
	}
	public void setDni(int dni) {
		this.dni = dni;
	}
	

	public int getBalance() {
		return balance;
	}
	public void setBalance(int balance) {
			if(balance<0) {
				this.balance = balance;
			}else {
				this.balance = -1*balance;
			}
	}

	
	public void printToString() {
		System.out.println(toString());
	}

	@Override
	public String toString() {
		return "CuentaCorriente [name=" + name + ", dni=" + dni + ", balance=" + balance + "]";
	}





	
	
	
	
	
	
}
